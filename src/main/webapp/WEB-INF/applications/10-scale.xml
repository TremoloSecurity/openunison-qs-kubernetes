            <url regex="false" authChain="LoginService" overrideHost="false" overrideReferer="false">
                <host>#[OU_HOST]</host>
                <filterChain>

                </filterChain>
                <uri>/newproject</uri>

                <results>
                    <auSuccess></auSuccess>
                    <auFail>Default Login Failure</auFail>
                    <azSuccess></azSuccess>
                    <azFail>PrivilegedRequest</azFail>
                </results>
                <azRules>
